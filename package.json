{
  "name": "my-web-components",
  "version": "0.0.1",
  "private": true,
  "author": "Lindsay Parker <lindsay.parker@inin.com>",
  "scripts": {
    "prestart": "npm run build && npm run test",
    "start": "node bin/www",
    "clean": "rimraf dist/*",
    "pretest": "npm run compile && npm run lint",
    "test": "mocha test -u bdd -R spec",
    "precompile": "npm run clean",
    "compile": "npm run compile:coffee && npm run compile:es6",
    "compile:coffee": "npm run compile:coffee:server && npm run compile:coffee:client",
    "compile:coffee:server": "coffee --compile --output ./dist/lib ./src",
    "compile:coffee:client": "coffee --compile --output ./dist/public ./client",
    "compile:es6": "npm run compile:es6:server && npm run compile:es6:client",
    "compile:es6:server": "babel src --out-dir ./dist/lib",
    "compile:es6:client": "babel client -d ./dist/public",
    "prebuild": "npm run build:clean",
    "build": "npm run build:sass",
    "build:clean": "rimraf ./dist/public/*",
    "build:sass": "node-sass ./client/css --output ./dist/public/css",
    "lint": "npm run lint:coffee && npm run lint:es6",
    "lint:coffee": "npm run lint:coffee:server && npm run lint:coffee:client",
    "lint:coffee:server": "coffeelint -f ./coffeelint.json ./src",
    "lint:coffee:client": "coffeelint -f ./coffeelint.json ./client",
    "lint:es6": "npm run lint:es6:server && npm run lint:es6:client",
    "lint:es6:server": "eslint src/**/*.js",
    "lint:es6:client": "eslint client/**/*.js",
    "prewatch": "npm run clean && npm run build:clean && npm run watch:lint",
    "watch": "npm run watch:coffee && npm run watch:es6 && npm run watch:sass && npm run watch:server",
    "watch:test": "npm run test -- -w -R min",
    "watch:coffee": "npm run watch:coffee:server && npm run watch:coffee:client",
    "watch:coffee:server": "coffee -w --compile --output ./dist/lib ./src",
    "watch:coffee:client": "coffee -w --compile --output ./dist/public ./client",
    "watch:es6": "npm run watch:es6:server && npm run watch:es6:client",
    "watch:es6:server": "babel -w src --out-dir ./dist/lib",
    "watch:es6:client": "babel -w client -d ./dist/public --source-maps inline",
    "watch:sass": "node-sass --watch ./client/css --output ./dist/public/css",
    "watch:lint": "watch 'npm run lint' .",
    "watch:server": "nodemon --ignore dist bin/www",
    "version:major": "npm version major",
    "version:minor": "npm version minor",
    "version:patch": "npm version patch",
    "push:origin": "git push --tags origin HEAD:master"
  },
  "engines": {
    "node": "~0.10.31",
    "npm": "~1.4.23"
  },
  "repository": {
    "type": "git",
    "url": "bitbucket:lindsayparker/my-web-components.git"
  },
  "dependencies": {
    "async": "^1.5.0",
    "bluebird": "^3.0.5",
    "body-parser": "^1.13.3",
    "config": "^1.16.0",
    "cookie-parser": "^1.3.3",
    "express": "^4.13.3",
    "lodash": "^3.10.1",
    "morgan": "^1.6.1",
    "request": "^2.65.0",
    "request-promise": "^1.0.2",
    "serve-favicon": "^2.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^5.0.0-beta1",
    "babel-preset-es2015": "^6.1.18",
    "chai": "^3.4.0",
    "coffee-script": "^1.9.1",
    "coffeelint": "^1.13.1",
    "eslint": "^1.10.2",
    "grunt": "^0.4.5",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-develop": "^0.4.0",
    "grunt-sass": "^1.0.0",
    "load-grunt-tasks": "^3.2.0",
    "mocha": "^2.3.3",
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1",
    "rimraf": "^2.4.3",
    "time-grunt": "^1.2.1",
    "watch": "^0.16.0"
  }
}
